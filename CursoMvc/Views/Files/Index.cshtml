@model.CursoMvc.Models.Files.FileVm
@{
    ViewBag.Title = "Archivos";
}

<h2>@ViewBag.Title</h2>

    @if(viewBag.Message != null)
    {
        <div class="alert alert-success" role="alert">
            @ViewBag.Message
        </div>
    }

    @using (Html.BeginForm("Save","Files",FormMethod.Post, new { entypes = "multipart/form-data" }))
    {
        @Html.AntiForgreyToken();
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="form-group">
                    @Html.LabelFor(d => d.Archivo1)
                    @Html.TextBoxFor(d => d.Archivo1, new { type = "file", accept = ".png" })
                    @Html.ValidationMessageFor(d => d.Archivo1, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(d => d.Archivo2)
                    @Html.TextBoxFor(d => d.Archivo2, new { type = "file", accept = ".png" })
                    @Html.ValidationMessageFor(d => d.Archivo1, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(d => d.cadena)
                    @Html.TextBoxFor(d => d.cadena, new { type = "file", accept = ".png" })
                    @Html.ValidationMessageFor(d => d.cadena, "", new { @class = "text-danger" })
                </div>

                <div class="from-group" style="text-align:right;">
                    <input type="submit" class="btn btn-success" value="Guardar"/>

                </div>
            </div>
        </div>
    }

